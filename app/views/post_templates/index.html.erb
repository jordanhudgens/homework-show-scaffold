<p id="notice"><%= notice %></p>

<h1>Post Templates</h1>

<table>
  <thead>
    <tr>
      <th>New thing</th>
      <th>Other thing</th>
      <th>Another thing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_templates.each do |post_template| %>
      <tr>
        <td><%= post_template.new_thing %></td>
        <td><%= post_template.other_thing %></td>
        <td><%= post_template.another_thing %></td>
        <td><%= link_to 'Show', post_template %></td>
        <td><%= link_to 'Edit', edit_post_template_path(post_template) %></td>
        <td><%= link_to 'Destroy', post_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post Template', new_post_template_path %>
